<!-- views/editexpense.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Expense</title>
    <link rel="stylesheet" href="../stylesheets/editexpence.css">
</head>
<body>
    <div class="edit-container">
        <h1>Edit Expense</h1>
        <!-- Form for editing expense details -->
        <form action="/editexpense/<%= result._id %>" method="POST" class="edit-form">
            <label for="name">Name:</label>
            <input type="text" name="name" value="<%= result.name %>" required><br>

            <label for="amount">Amount:</label>
            <input type="text" name="amount" value="<%= result.amount %>" required><br>

            <label for="date">Date:</label>
            <input type="date" name="date" value="<%= result.date %>" required><br>

            <label for="category">Category:</label>
            <input type="text" name="category" value="<%= result.category %>" required><br>

            <label for="tags">Tags:</label>
            <input type="text" name="tags" value="<%= result.tags %>" required><br>

            <button type="submit" class="update-button">Update Expense</button>
        </form>
    </div>
</body>
</html>
